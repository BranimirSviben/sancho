spring:
  main:
    webApplicationType: NONE

sancho:

  # enable/disable automatic scheduling
  # disable scheduler for unit testing
  schedulerAutoStartDisabled: false

  # how long do we wait in case of error
  # while scheduling next event
  schedulerErrorWait: 300 # seconds

  # SatTrackAPI base URL
  satTrackApiUrl: https://sattrackapi.ultima.hr:8443/api/v1

  # station details
  station:
    name: "Pregrada/Kunagora"
    latitude: 46.1685
    longitude: 15.7484
    altitude: 380

  rotator:
    rotctldHost: 127.0.0.1
    rotctldPort: 4533
    stepSize: 0.25 # seconds
    halfFlipHighElPasses: true # should the second half of passes through or near zenith be flipped?
    halfFlipHighElPassesMinElevation: 75 # minimum elevation for half-flip

  # satellites we're tracking

  # You can use the following placeholders in shell cmd templates:
  # ${satId} - string
  # ${satName} - string
  # ${radioFrequency} - double [MHz]
  # ${predictTime} - Unix epoch
  # ${rise} - Unix epoch
  # ${set} - Unix epoch
  # ${duration} - double [sec]
  satelliteData:
    - id: 25338
      name: "NOAA15"
      radioFrequency: 137.62
      minElevation: 5.0
      stepSize: 1
      rotatorEnabled: false
      satRiseShellCmdTemplate: ""
      satSetShellCmdTemplate: ""
    - id: 28654
      name: "NOAA18"
      radioFrequency: 137.9125
      minElevation: 5.0
      stepSize: 1
      rotatorEnabled: false
      satRiseShellCmdTemplate: ""
      satSetShellCmdTemplate: ""
    - id: 33591
      name: "NOAA19"
      radioFrequency: 137.1
